<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/float_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#66000000"
    android:orientation="vertical"
    android:paddingTop="50dp">
    <TextView
        android:id="@+id/txt_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/layout1"
        android:layout_marginRight="5dp"/>
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/txt_count"
        >
        <Button
            android:id="@+id/btn_record"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="@string/str_action_record"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/btn_start"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btn_record"
            android:text="@string/str_action_start"
            android:textSize="10sp"/>
        <Button
            android:id="@+id/btn_play"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btn_record"
            android:text="@string/str_action_play"
            android:textSize="10sp"/>
        <Button
            android:id="@+id/btn_lahei"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/str_action_lahei_err"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/btn_user_name"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/str_action_user_err"
            android:textSize="10sp"/>

    </LinearLayout>



</RelativeLayout>
